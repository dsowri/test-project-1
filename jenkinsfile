pipeline {
    agent any

    stages {
        stage('SCM') {
            steps {
                script {
                    git 'https://github.com/dsowri/test-project-1.git'
                }
            }
        }

        stage('SonarQube analysis') {
            steps {
                script {
                    def scannerHome = tool 'SonarQube Scanner 5.0.1.3006'
                    withSonarQubeEnv('sonarqube-1') {
                        sh "${scannerHome}/bin/sonar-scanner"
                    }
                }
            }
        }
    }
}
