pipeline {
    agent any

    stages {
        stage('SCM') {
            steps {
                script {
                    git 'https://github.com/foo/bar.git'
                }
            }
        }

        stage('SonarQube analysis') {
            steps {
                script {
                    def scannerHome = tool 'SonarScanner 4.0'
                    withSonarQubeEnv('sonarqube-1') {
                        sh "${scannerHome}/bin/sonar-scanner"
                    }
                }
            }
        }
    }
}
